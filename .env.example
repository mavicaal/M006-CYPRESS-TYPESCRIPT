# Cypress Environment Configuration

# Base URL for tests
CYPRESS_BASE_URL=http://localhost:3000

# Test User Credentials
TEST_USERNAME=testuser@example.com
TEST_PASSWORD=TestPassword123!

# Timeouts (in milliseconds)
CYPRESS_DEFAULT_COMMAND_TIMEOUT=5000
CYPRESS_PAGE_LOAD_TIMEOUT=30000

# Viewport Settings
CYPRESS_VIEWPORT_WIDTH=1280
CYPRESS_VIEWPORT_HEIGHT=720

# Video Recording
CYPRESS_VIDEO=false

# Screenshots on Failure
CYPRESS_SCREENSHOT_ON_RUN_FAILURE=true

# Test Environment
NODE_ENV=test
